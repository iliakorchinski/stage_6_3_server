

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lists     List[] 
}


model List {
  id        String   @id @default(uuid())
  title     String
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id])
  position  Float    @default(0)
  tasks Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Task {
  id          String   @id @default(uuid())
  title       String
  description String?  
  position    Int      
  listId      String
  list        List      @relation(fields: [listId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}


model History {
  id          String   @id @default(uuid())
  entityType  String   
  entityId    String  
  boardId     String?  
  operation   String  
  oldValue    Json?
  newValue    Json?
  createdAt   DateTime @default(now())
}